            <script>
                var carousel1 = new Siema({
                    selector: '.carousel1',
                    duration: 200,
                    easing: 'ease-out',
                    perPage: 3,
                    startIndex: 0,
                    draggable: true,
                    multipleDrag: false,
                    threshold: 3,
                    loop: false,
                    rtl: false,
                    onInit: () => {},
                    onChange: () => {},
                });

                var carousel2 = new Siema({
                    selector: '.carousel2',
                    duration: 200,
                    easing: 'ease-out',
                    perPage: 3,
                    startIndex: 0,
                    draggable: false,
                    multipleDrag: false,
                    threshold: 3,
                    loop: false,
                    rtl: false,
                    onInit: () => {},
                    onChange: () => {},
                });

                function CarouselCollaboratorsPrev()
                {
                    carousel1.prev()
                    carousel2.prev()
                }

                function CarouselCollaboratorsNext()
                {
                    carousel1.next()
                    carousel2.next()
                }
            </script>
