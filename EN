        <div id="Modal-wrapper">
            <div id="Modal">
                <div class="Modal-image"></div>
                <p class="Modal-text"></p>
            </div>
        </div>
        <script>

            function GetChild(elem, tagName)
            {
                let children = elem.children
                for (let j = 0; j < children.length; ++j)
                {
                    let child = children[j]
                    if (child.tagName === tagName)
                        return (child)
                }
            }

            function ShowModal(elem)
            {
                let modalWrapper = document.getElementById("Modal-wrapper")
                let modal = document.getElementById("Modal")
                modalWrapper.style.display = "flex"

                let image = GetChild(elem, "IMG")
                let imgDiv = GetChild(modal, "DIV")
                imgDiv.style.backgroundImage = "url('" + image.src + "')"

                let text = GetChild(elem, "P")
                let textDiv = GetChild(modal, "P")
                textDiv.textContent = text.textContent

                const outsideClickListener = event => {
                    console.log(event.target.closest("#Modal"))
                    if (event.target.closest("#Modal") === null) {
                        modalWrapper.style.display = 'none'
                    document.removeEventListener('click', outsideClickListener)
                    }
                }
                setTimeout(() => {
                    document.addEventListener('click', outsideClickListener)
                }, 1000)
                
            }

            function ShowCollaborators()
            {
                let collaborators = document.getElementsByClassName("Collaborators-item")
                console.log(collaborators)
                for (let i = 0; i < collaborators.length; ++i)
                {
                    
                    let collaborator = collaborators[i]
                    console.log(collaborator)
                    let img = GetChild(collaborator, "IMG")
                    if (img)
                        collaborator.style.backgroundImage = "url('" + img.src + "')"
                }
            }
            ShowCollaborators()
        </script>
